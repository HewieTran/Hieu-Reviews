<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Home Page</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" media="screen" href="/style.css">
	<link rel="shortcut icon" type="image/png" href="https://i.ibb.co/Y79B8CG/Favicon-Logo-Transparent.png">
	<script src="main.js"></script>
</head>

<body>
	<!-- HEADER -->
	<header id="masthead">
		<div id="banner-image"></div>
		<div id="masthead-content" class="grid">
			<div class="content-wrap">
				<!-- NAV BAR -->
				<div id="nav-header">
					<div class="logo">
						<a href="/"><img src="/images/logo.png" alt=""></a>
					</div>

					<div id="nav">
						<div></div>
						<div id="nav-link">
							<a class="nav-link-a" href="/">Home</a>
							<a class="nav-link-a" href="/reviews/1">Reviews</a>
							<a class="nav-link-a" href="/Contact">Contact Me</a>

							<a id="nav-burger" href="#" onclick="openSlideMenu()">
								<svg width="30" height="30">
									<path d="M0,5 30,5" stroke="#fff" stroke-width="5" />
									<path d="M0,14 30,14" stroke="#fff" stroke-width="5" />
									<path d="M0,23 30,23" stroke="#fff" stroke-width="5" />
								</svg>
							</a>
						</div>
						<div id="side-menu" class="side-nav">
							<a href="#" class="btn-close" onclick="closeSlideMenu()">&times;</a>
							<a href="/">Home</a>
							<a href="/reviews/1">Reviews</a>
							<a href="/contact">Contact</a>
						</div>
					</div>
				</div>


				<!-- TEXT HEADER -->
				<div id="banner-text">
					<h1>HI THERE, <br> I'M HIEU AND WELCOME TO HIEU REVIEWS!</h1>
				</div>

				<!-- FEATURED MOVIE -->
				<div id="featured">
					<h2 class="header-text">FEATURED REVIEW</h2>
					<div id="featured-box">
						<div id="featured-poster">
							<img src="<%= reviews[0].poster %>" alt="">
						</div>
						<div id="review-content">
							<div id="featured-title">

								<h1><%= reviews[0].title %></h1>

							</div>
							<div id="featured-review"><%- reviews[0].reviewContent.split(' ').slice(0, 75).join(' ') %>
								...</div>

							<a href="/reviews/r/<%= reviews[0]._id %>"><button>Read More</button></a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>

	<!-- MAIN -->
	<main class="home">
		<section id="section-a-header" class="grid">
			<div class="content-wrap header-text">
				<h2>RECENT REVIEWS</h2>
			</div>
		</section>

		<section id="section-a" class="grid">
			<div class="content-wrap">
				<div class="reviews-grid">
					<% const recentReviews = reviews.slice(1) %>
					<% recentReviews.forEach(review => { %>
					<div class="card shadow">
						<!-- a -->
						<a href="/reviews/r/<%= review._id %>"><img src="<%= review.poster %>" alt=""></a>
						<div class="card-content">
							<div class="movie-title">
								<h3><%= review.title %></h3>
							</div>
							<div class="movie-review">
								<% if (review.reviewContent) { %>
								<%- review.reviewContent.split(' ').slice(0, 35).join(' ') %> ...
								<%} else {%>
								N/A
								<%}%> 
                        </div>
                        <a href="/reviews/r/<%= review._id %>"><button>Read More</button></a>
							</div>
						</div>
					</div>
					<% }) %>
				</div>
			</div>
		</section>


		<section id="section-a-footer" class="grid">
			<div class="content-wrap header-text">
				<div id="section-a-footer-grid">
					<div>
					</div>
					<div>
						<a href="/reviews/1">
							<h2>SEE MORE REVIEWS</h2>
						</a>
					</div>
				</div>
			</div>
		</section>


		<section id="section-b" class="grid"></section>
	</main>

	<% include partials/footer %>